extends _layout

block title
	title Portfolio inner

block content
	.wrapper
		.scroll#out
			include includes/_burger
			.content.content-portfolio-inner(data-page="portfolio-inner")
				include includes/_header
				.content-wrapper
					.content-head
						.text-container
							.title Caf√© de Paris
							.image__cover
								img(src="img/portfolio-title.jpg")
							.subtitle
								| Interior design for a part of France in Minsk
							.descr
								p
									| It's not boring solemnity, not pomp&shy;ous luxury, not flashy kitsch. This is a very subtle and elegant chic with the created image.
					.content-body
						.text-container
							.title Gallery
						.projects-gallery
							.scroller-gallery
								ul.grid#l-gallery
									mixin gridItem(link)
										li(class="load" data-src=link)
											a
												.image__cover
													img(src=link)
